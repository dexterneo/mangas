template(name="tomeDetails")
	.container
		.col-xs-12.col-sm-12.col-md-6.col-lg-6
			h1 #{mangasName}
			h3 {{_ "by"}} #{author}
			.thumbnail
				img(src="#{cover}" alt="#{title}")
				.caption
					h3.text-center #{title}
					h4.text-center {{_ "tome"}} #{tomeNumber} - {{_ "version"}} : #{version}
					p {{_ "released"}} #{displayDate} {{_ "byEditor"}} #{editor}
					if owned
						p {{_ "inBiblio"}}
					else
						p {{_ "notInBiblio"}}
		if notOwned
			.col-xs-12.col-sm-12.col-md-6.col-lg-6
				h2 {{_ "buyTome"}}
				a(href="http://www.amazon.fr/s?field-keywords=#{isbn}" target="blank") {{_ "buyItOnAmazon"}}
				h2 {{_ "setOwnedTrue"}}
