template(name="header")
	nav.navbar.navbar-default.navbar-fixed-top
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#mkp-navbar" aria-expended="false")
					span.sr-only {{_ "toggleNav"}}
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="{{pathFor 'home'}}") {{_ "applicationName"}}
			#mkp-navbar.collapse.navbar-collapse
				ul.nav.navbar-nav
					li.active
						a(href="{{pathFor 'home'}}") {{_ "ownedMangas"}}
					li
						a(href="#") {{_ "missingMangas"}}
				form.navbar-form.navbar-left(role="search")
					.form-group
						input.form-control(type="text" placeholder="Search")
					button.btn.btn-default(type="submit") {{_ "go"}}
				.nav.navbar-nav.navbar-right
					+loginButtons