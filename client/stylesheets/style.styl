body
	padding-top 70px

.panel-body
	img
		width 100%

.mangas, .mangas-cover
	display inline-block
	padding 0 10px 0 10px

#buttonAddMangaForUser
	margin 0 0 20px 0

@media (max-width: 449px)
	.mangas.grid-item
		width 100%
	.mangas-cover.grid-item
		width 50%
@media (min-width: 450px)
	.mangas.grid-item
		width 50%
	.mangas-cover.grid-item
		width 33%
@media (min-width: 768px)
	.mangas.grid-item
		width 33%
	.mangas-cover.grid-item
		width 33%
@media (min-width: 992px)
	.mangas.grid-item
		width 25%
	.mangas-cover.grid-item
		width 25%
@media (min-width: 1200px)
	.mangas.grid-item
		width 25%
	.mangas-cover.grid-item
		width 20%
