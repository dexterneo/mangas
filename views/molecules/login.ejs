<section id="login-section">
  <h2>Log in to your account</h2>
  <%- include('error', {errors: errors}); %>
  <form method="POST" action="/login">
    <div>
      <label for="email-login" class="label">Enter your email</label>
      <input type="email" id="email-login" required name="email" />
    </div>
    <div>
      <label for="password-login" class="label">Enter your password</label>
      <input type="password" id="password-login" required name="password" minlength="6" />
    </div>
    <button class="form-submit" type="submit">Log in</button>
  </form>
</section>
