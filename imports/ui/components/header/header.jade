template(name="header")
	nav.navbar.navbar-default.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#nav-mangatek" aria-expended="false")
					span.sr-only {{_ "toggleNav"}}
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="{{pathFor 'home'}}") {{_ "applicationName"}}
			#nav-mangatek.collapse.navbar-collapse
				if currentUser
					ul.nav.navbar-nav
						li(class="#{homeActive}")
							a.route(href="{{pathFor 'ownedMangas'}}" data-target='.navbar-collapse') {{_ "ownedMangas"}}
						li(class="#{missingActive}")
							a.route(href="{{pathFor 'missingMangas'}}" data-target='.navbar-collapse') {{_ "missingMangas"}}
						if admin
							li(class="#{adminActive}")
								a.route(href="{{pathFor 'adminHome'}}" data-target='.navbar-collapse') {{_ "admin"}}
				.nav.navbar-nav.navbar-right
					+loginButtons